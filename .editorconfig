# EditorConfig helps maintain consistent coding styles
# For more information: https://editorconfig.org/

root = true

# 2 spaces for Go files
[*.go]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# 2 spaces for other common files (optional)
[*.{js,ts,jsx,tsx,css,scss,html,json,yml,yaml,md}]
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

